<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3" >

    <View
        android:id="@+id/line0"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="#cccccc" />

    <RelativeLayout
        android:id="@+id/user_info_area"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_below="@+id/line0"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/head_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/head_icon" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/head_img"
            android:text="账号管理"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/arrow"
            android:text="冷艳"
            android:textColor="#b4b4b4"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/user_info_area"
        android:background="#cccccc" />

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/line2"
        android:layout_marginTop="10dp"
        android:background="#cccccc" />

    <RelativeLayout
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/line3"
        android:background="#ffffff" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="关于赚米宝"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/about"
        android:background="#cccccc" />

    <RelativeLayout
        android:id="@+id/QA"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/line4"
        android:background="#ffffff" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="问题解答"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/QA"
        android:background="#cccccc" />

    <RelativeLayout
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/line5"
        android:background="#ffffff" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="反馈意见"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/feedback"
        android:background="#cccccc" />

    <View
        android:id="@+id/line7"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/line6"
        android:layout_marginTop="10dp"
        android:background="#cccccc" />

    <RelativeLayout
        android:id="@+id/clear_cache"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/line7"
        android:background="#ffffff" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="清除缓存"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/line8"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/clear_cache"
        android:background="#cccccc" />

    <RelativeLayout
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/line8"
        android:background="#ffffff" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="软件更新"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/arrow"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="已是最新版本"
            android:textColor="#b4b4b4"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/line9"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/update"
        android:background="#cccccc" />

    <View
        android:id="@+id/line10"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/line9"
        android:layout_marginTop="10dp"
        android:background="#cccccc" />

    <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/line10"
        android:background="#ffffff"
        android:gravity="center"
        android:text="退出账号"
        android:textColor="#953232"
        android:textSize="16sp" />

    <View
        android:id="@+id/line11"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/logout"
        android:background="#cccccc" />

    <Button
        android:id="@+id/test_btn"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/line11"
        android:background="#ffffff"
        android:gravity="center"
        android:text="Test"
        android:textSize="16sp" />

</RelativeLayout>